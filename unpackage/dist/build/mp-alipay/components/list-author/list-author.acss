.list-author{display:-webkit-box;display:-webkit-flex;display:flex;padding:10px 0;margin:0 10px;box-sizing:border-box;border-bottom:1px solid #f5f5f5}.list-author .list-author__img{-webkit-flex-shrink:0;flex-shrink:0;width:40px;height:40px;overflow:hidden}.list-author .list-author__img image{width:100%;height:100%}.list-author .list-author__content{width:100%;margin-left:10px;display:-webkit-box;display:-webkit-flex;display:flex;-webkit-box-orient:vertical;-webkit-box-direction:normal;-webkit-flex-direction:column;flex-direction:column;-webkit-box-pack:justify;-webkit-justify-content:space-between;justify-content:space-between}.list-author .list-author__content .content-title{position:relative;padding-right:30px;font-size:14px;color:#333;font-weight:700;line-height:1.2}.list-author .list-author__content .content-des{display:-webkit-box;display:-webkit-flex;display:flex;-webkit-box-pack:justify;-webkit-justify-content:space-between;justify-content:space-between;font-size:12px}.list-author .list-author__content .content-des .content-des__label{color:#666}.list-author .list-author__content .content-des .content-des__info{color:#999;line-height:1.5}.list-author .list-author__content .content-des .content-des__info text:first-child{margin-right:10px}